#!/usr/bin/env bash
set -x

# Setup testing databases, wait for them to be available
docker-compose up --build --detach
docker-compose up wait-all | grep -v "connection refused"

# Run tests, forcing timezone to GMT +00:00
export TZ=UTC
jest $@
jestExitCode="$?"

# Cleanup containers
docker-compose down

exit "$jestExitCode"
